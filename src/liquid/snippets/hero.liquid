{% comment %}
  Requires the folowing arguments: 

  - settings
{% endcomment %} 

<style> 
.hero--{{ id }} { 
    background-image: url({{ settings.small_image | img_url: 'master' }}); 
} 
  @media (min-width: 600px) { 
      .hero--{{ id }} {
      background-image: url({{ settings.large_image | img_url: '100x' }}); 
      }
  }
  @media (min-width: 992px) { 
      .hero--{{ id }} { 
      background-image: url({{ settings.large_image | img_url: 'master' }});
      }
  }
</style>
<section class="hero hero--{{ id }}">
  <div class="hero__overlay"></div>
   <div class="hero__content"> 
    <h2 class="hero__heading">{{ settings.heading }}</h2>
    <p class="hero__copy">{{ settings.copy }}</p>
    <a href="{{ settings.link_url }}" class="hero__link">{{ settings.link_text }}</a>
   </div>
</section>